<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1-create-bot-users" author="kira">
        <createTable tableName="bot_users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="position" type="VARCHAR(50)"/>
            <column name="branch" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="2-create-feedbacks" author="kira">
        <createTable tableName="feedbacks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="sentiment" type="VARCHAR(50)"/>
            <column name="critical_level" type="INT"/>
            <column name="solution" type="TEXT"/>
            <column name="bot_user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_feedback_user"
                             references="bot_users(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
